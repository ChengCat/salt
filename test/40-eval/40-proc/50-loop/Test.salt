

-- Factorial using procedural loop.
test eval proc launch #Nat of
 do     cell n: #Nat ← 10
        cell x: #Nat ← 1
        loop do
                when #nat'eq [n, 0] break
                x ← #nat'mul [x, n]
                n ← #nat'sub [n, 1]
        return x


term square : []!#Console
 = box proc do
        cell y: #Nat ← 0
        loop do
                cell x: #Nat ← 0
                loop do
                        #console'print "x"
                        x ← #nat'add [x, 1]
                #console'print "\n"
                y ← #nat'add [y, 1]

test exec square
