term addr'allocandfree : []! #Memory
 = box private r with {} in do
     s = #sizeOf @[#Word8]
     p = #allocAddr s
     #freeAddr p

test exec addr'allocandfree

term ptr'allocandfree : []! #Memory
 = box private r with {Alloc; Write; Read} in do
     p = #allocPtr @[r, #Word8]
     #freePtr @[r, #Word8] p

test exec ptr'allocandfree

