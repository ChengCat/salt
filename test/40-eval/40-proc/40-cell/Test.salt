

-- Simple cell init and read.
test eval proc do
        cell x: #Nat ← 2
        yield x


-- Cell update.
test eval proc do
        cell x: #Nat ← 2
        x ← 3
        yield x


-- Shadowed cell names.
test eval proc do
        cell x: #Nat ← 5
        cell x: #Nat ← 6
        yield x


-- Update of cell that shadows another.
test eval proc do
        cell x: #Nat ← 5
        cell x: #Nat ← 6
        x ← 7
        yield x
