-- Draw a square.
proc square1 []: []! #Console
 = cell x: #Nat ← 9
 ; while (#nat'gt [x, 0])
          ( cell y: #Nat ← 9
          ; while (#nat'gt [y, 0])
                  ( seq [] = call #console'print "*"
                  ; seq y  ← #nat'sub [y, 1]
                  ; end)
          ; seq [] = call #console'print "\n"
          ; seq x  ← #nat'sub [x, 1]
          ; end)
 ; call #console'println "done"

test exec square1 []


