-- (evm-lst) ----------------------------------------------
term someList @[a: #Data] [x: a]: #List a
 = [list a| x, x]

test eval eval'list
 = someList @#Nat 5


-- (evm-set) ----------------------------------------------
term someSet  @[a: #Data] [x: a, y: a]: #Set a
 = [set a| x, y]

test eval eval'set
 = someSet @#Nat [5, 6]


-- (evm-map) ----------------------------------------------
term someMap  @[tk: #Data, tv: #Data] [k: tk, v: tv]: #Map [tk, tv]
 = [map tk tv| k := v ]

test eval eval'map
 = someMap @[#Nat, #Symbol] [5, 'Derp]

