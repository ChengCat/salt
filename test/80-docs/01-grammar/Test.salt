proc square3 []: []! #Console
 = do   cell x: #Nat ← 9
        while (#nat'gt [x, 0]) do
                cell y: #Nat ← 9
                while (#nat'gt [y, 0]) do
                        #console'print "*"
                        y  ← #nat'sub [y, 1]
                #console'print "\n"
                x ← #nat'sub [x, 1]
        #console'println "done"


test exec square3 []